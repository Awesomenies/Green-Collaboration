@model Green.Models.ViewModels.VmBlog
@{
    ViewBag.Title = "Blog";
}

<section class="row">
    <div class="col-sm-9">
        <div id="my-carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->

            <div class="carousel-inner" role="listbox">
                @for (int i = 0; i < Model.BlogSliders.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="item active">
                            <img alt="First slide" src="http://placehold.it/1200x675&text=First+slide">
                            <div class="carousel-caption">
                                <h3>Caption heading 1</h3>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img alt="Second slide" src="http://placehold.it/1200x675&text=Second+slide">
                            <div class="carousel-caption">
                                <h3>Caption heading 2</h3>
                                <p>Morbi eget libero quis metus consectetur semper.</p>
                            </div>
                        </div>

                    }

                }
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-sm-3">

        <div class="carousel-indicators ">
            @* Ændre til en parent/WRAPPER *@

            @{
                int caro = 0;
                for (int i = 0; i < 5; i++)
                {
                    if (i == 0)
                    {
                        <div data-target="#my-carousel" data-slide-to="0" class="active">
                            <div class="siteimg">
                                <img src="http://placehold.it/200x100&text=dette+er+den+foerste" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div data-target="#my-carousel" data-slide-to="@caro">
                            @* Her du PER ITEM *@
                            <div class="siteimg">
                                <img src="http://placehold.it/200x100" />
                            </div>
                        </div>

                    }
                    caro++;



                }
            }
        </div>
    </div>
</section>



<section class="row sogFelt">
    <div class="col-md-12 ">

        <form action="" method="post">
            <input type="text" name="Soeg_felt1" value="soeg_felt1" />
            <button type="submit" value="" class="alert-danger">Søg</button>
            <button type="submit" value="" class="alert-danger">Sotere</button>
            <button type="submit" value="" class="alert-danger">Søg</button>
        </form>

    </div>
</section>
<div class="row BlogFelt">
    <div class="col-md-12">
        
        @foreach (var item in Model.Blogs)
        {
            <div class="col-md-3"><img src="/media/@Model.Blog.ImgUrl"/>
            </div>
            <div class="col-md-6">
                <h3>@Model.Blog.Headline af @Model.Blog.Author den @Model.Blog.CreateTime</h3>
                @if (Model.Blog.Text.Length < 400)
                {
                    <p>@Model.Blog.Text</p>
                }
                else
                {
                    <p>@Model.Blog.Text.Substring(0, 400)...</p>
                }
            </div>
        }

        @foreach (var item in Model.Newss)
        {
            <div class="col-md-3">
                <h3>Nyheder</h3>
                <ol>
                    <li>@Model.News.Text Af @Model.News.Author</li>
                    <li>@Model.News.Text Af @Model.News.Author</li>
                    <li>@Model.News.Text Af @Model.News.Author</li>
                </ol>

            </div>
        }

    </div>
</div>
